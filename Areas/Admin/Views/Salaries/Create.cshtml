@model PizzaDeliveryManagement.Models.Salary

@{
    ViewData["Title"] = "Create";
    
}



    <div class="container pTop">
        <h4 class="text-success">Add Employee Salary here:</h4>
        <hr />

        <partial name="_StatusMessage" model=@ViewBag.StatusMessage />
        <div class="col-md-7">
            <form asp-action="Create" class="row-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <div class="col-auto">
                        <label asp-for="EmployeeId" class="control-label"></label>
                    </div>
                    <div class="col-auto">
                        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                    </div>


                </div>
                <div class="form-group">
                    <div class="col-auto">
                        <label asp-for="SalaryPerHour" class="control-label"></label>


                    </div>
                    <div class="col-auto">
                        <input asp-for="SalaryPerHour" class="form-control" />
                    </div>
                    <span asp-validation-for="SalaryPerHour" class="text-danger"></span>

                </div>


                <partial name="_CreateBackButtonPartial" />
            </form>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
