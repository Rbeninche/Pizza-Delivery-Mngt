@model PizzaDeliveryManagement.Models.Employee

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container pTop">


        <h3>Are you sure you want to delete this?</h3>
        <div>
            <hr />

            <div class="col-md-7">
                <form asp-action="Delete" class="row-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <div class="col-auto">
                            <label asp-for="FirstName" class="col-form-label font-weight-bold"></label>
                        </div>
                        <div class="col-auto">
                            <input asp-for="FirstName" readonly class="form-control" />
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="col-auto">
                            <label asp-for="LastName" class="col-form-label font-weight-bold"></label>
                        </div>
                        <div class="col-auto">
                            <input asp-for="LastName" readonly class="form-control" />
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>


                    <partial name="_DeleteAndBackButton" model="Model.Id" />

                </form>
            </div>
        </div>

    </div>
