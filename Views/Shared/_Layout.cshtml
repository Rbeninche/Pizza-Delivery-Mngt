@using PizzaDeliveryManagement.Utility
@using Microsoft.AspNetCore.Http

@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzaDeliveryManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>


    @if (User.IsInRole(StaticData.AdminUser))
    {
        <nav class="navbar navbar-expand-md fixed-top">
            <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">Pizza Delivery</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown text-white-50">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropDownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Manage Here!
                        </a>
                        <ul class="dropdown-menu dropdown-bg" aria-labelledby="navbarDropDownMenuLink">

                            <li class="dropdown-submenu">
                                <a class="dropdown-item dropdown-toggle text-success font-weight-bold h5" href="#">
                                    Employees
                                </a>
                                <ul class="dropdown-menu dropdown-bg">
                                    <li><a class="dropdown-item text-success font-weight-bold" asp-action="Index" asp-controller="Employees" asp-area="Admin"><span style="text-transform:uppercase">Employees' List</span></a></li>
                                    <li><a class="dropdown-item text-success font-weight-bold" asp-action="Index" asp-controller="Salaries" asp-area="Admin"><span style="text-transform:uppercase">Employees Salary</span></a></li>
                                </ul>
                            </li>
                            <li><a class="dropdown-item text-success font-weight-bold" asp-action="" asp-controller="" asp-area="Admin"><span style="text-transform:uppercase">Customers</span></a></li>
                            <li><a class="dropdown-item text-success font-weight-bold" asp-action="" asp-controller="" asp-area="Admin"><span style="text-transform:uppercase">Orders</span></a></li>
                        </ul>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
                
            </div>

        </nav>
    }
    else
    {
        <nav class="navbar navbar-expand-md fixed-top">
            <a class="navbar-brand" asp-area="Customer" asp-controller="Home" asp-action="Index">Pizza Delivery</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
                <partial name="_PCart" />
            </div>

        </nav>
    }


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - PizzaDeliveryManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
